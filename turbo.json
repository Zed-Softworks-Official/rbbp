{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "deploy-commands": {
            "dependsOn": ["^deploy-commands"]
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        }
    },
    "globalDependencies": ["**/.env*"],
    "globalEnv": [
        "DISCORD_TOKEN",
        "DISCORD_CLIENT_ID",
        "DISCORD_GUILD_ID",
        "CONVEX_URL",
        "NODE_ENV",
        "CONVEX_DEPLOY_KEY",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN"
    ]
}
